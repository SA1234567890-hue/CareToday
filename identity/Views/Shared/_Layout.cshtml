<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - identity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">identity</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">ManageRoles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">ManageUsers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Oxygen" asp-action="Index">crud_oxygen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="blood" asp-action="Index">crud_blood</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Incubation" asp-action="Index">crud_nursery</a>
                            </li>
                        }
                        @if (User.IsInRole("oxygen tube"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Oxygen" asp-action="Index">crud_oxygen</a>
                            </li>
                        }
                        @if (User.IsInRole("blood"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="blood" asp-action="Index">crud_blood</a>
                            </li>
                        }
                        @if (User.IsInRole("nursery"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Incubation" asp-action="Index">crud_nursery</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - identity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
